<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>


<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.BranchReportController">
   <content>
      <VBox alignment="CENTER" spacing="10">
      
                <Label fx:id="headlineText" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Branch Report" />
      
                <BarChart fx:id="orderChart">
              <xAxis>
                  <CategoryAxis label="Day" />
              </xAxis>
              <yAxis>
                  <NumberAxis label="Orders" />
              </yAxis>
          </BarChart>
          <Label fx:id="orderSummaryLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
      
                <BarChart fx:id="peopleChart">
              <xAxis>
                  <CategoryAxis label="Day" />
              </xAxis>
              <yAxis>
                  <NumberAxis label="People" />
              </yAxis>
          </BarChart>
          <Label fx:id="peopleSummaryLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
      
                <BarChart fx:id="complaintsChart">
              <xAxis>
                  <CategoryAxis label="Day" />
              </xAxis>
              <yAxis>
                  <NumberAxis label="Complaints" />
              </yAxis>
          </BarChart>
          <Label fx:id="complaintsSummaryLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
      
                <Button onAction="#goBack" text="Back" />
      
            </VBox>
   </content>
</ScrollPane>
