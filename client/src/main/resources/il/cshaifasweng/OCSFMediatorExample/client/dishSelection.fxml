<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.DishSelectionController">
    <children>
        <VBox alignment="CENTER" prefHeight="600" prefWidth="800" spacing="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <Label fx:id="menuLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-alignment: center;" text="Menu" />

            <TextField fx:id="searchField" alignment="CENTER" prefHeight="26.0" prefWidth="347.0" promptText="Search dishes..." />

            <ScrollPane fitToHeight="true" fitToWidth="true">
                <GridPane fx:id="dishGrid" alignment="CENTER" hgap="10" prefHeight="530.0" prefWidth="798.0" vgap="10" />
            </ScrollPane>
            <Button fx:id="backButton" onAction="#onBackClick" prefWidth="200" text="Back to Branch Selection" />
        </VBox>
    </children>
</AnchorPane>
