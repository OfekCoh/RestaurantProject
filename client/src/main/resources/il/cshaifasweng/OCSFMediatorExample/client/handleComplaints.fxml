<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.HandleComplaintsController">
   <children>
        <TableView fx:id="complaintsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" minWidth="50.0" text="ID" />
                <TableColumn fx:id="nameColumn" minWidth="100.0" text="Customer Name" />
                <TableColumn fx:id="timeRemainingColumn" minWidth="100.0" text="Time Remaining" />
                <TableColumn fx:id="branchNameColumn" minWidth="50.0" text="Branch" />
                <TableColumn fx:id="complaintColumn" minWidth="300.0" text="Complaint" />
                <TableColumn fx:id="actionColumn" minWidth="210.0" text="Actions" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
      <Button fx:id="backButton" alignment="CENTER" mnemonicParsing="false" onAction="#goBack" text="Back" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
