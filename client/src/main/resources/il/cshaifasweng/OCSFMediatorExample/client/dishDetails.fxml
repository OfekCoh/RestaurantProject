<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.DishDetailsController">
    <children>
        <VBox alignment="CENTER" prefHeight="600" prefWidth="800" spacing="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <Label fx:id="dishNameLabel" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Dish Name" />

            <ImageView fx:id="dishImageView" fitWidth="200" fitHeight="200" />

            <Label fx:id="dishDescriptionLabel" style="-fx-font-size: 16px;" text="Description" />
            <Label fx:id="dishIngredientsLabel" style="-fx-font-size: 16px;" text="Ingredients" />
            <Label fx:id="dishPriceLabel" style="-fx-font-size: 16px;" text="Price" />
            <Label fx:id="dishTypeLabel" style="-fx-font-size: 16px;" text="Dish Type" />

            <Button fx:id="backButton" onAction="#onBackClick" prefWidth="200" text="Back to Menu" />
        </VBox>
    </children>
</AnchorPane>
